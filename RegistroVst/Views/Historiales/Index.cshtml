@model IEnumerable<RegistroVst.Models.Historial>
@{
    ViewData["Title"] = "Lista de Historial";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    @*validacion de bootstrap*@
    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times; </span>
            </button>
        </div>
    }
    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de Eventos</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Historiales"> <i class="bi bi-person-plus-fill"></i>
                Agregar Nuevo Historial
            </a>
        </div>
    </div>

    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.Id)</td>
                        <td>@Html.DisplayNameFor(m => m.IdVisitante)</td>              
                        <td>@Html.DisplayNameFor(m => m.IdEvento)</td>
                        <td>@Html.DisplayNameFor(m => m.FechaSalida)</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.IdVisitante</td>
                        <td>@item.IdEvento</td>
                        <td>@item.FechaSalida</td>                      
                        <td>
                            <a asp-controller="Historiales" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="bi bi-pencil-square"></i>   Editar</a>
                            <a asp-controller="Historiales" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash"></i>   Eliminar</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No existen registros</p>
        }
    </div>
</div>
