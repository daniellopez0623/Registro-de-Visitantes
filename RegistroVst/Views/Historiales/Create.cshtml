@model RegistroVst.Models.Historial
@{
    ViewData["Title"] = "Registrar Historial";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">

    <div class="row">
        <div class="col-sm-10">
            <h3 class="text-center">Registrar Nuevo Historial</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">

            <form method="post" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IdVisitante" class="control-label"></label>
                    <input asp-for="IdVisitante" class="form-control" />
                    <span asp-validation-for="IdVisitante" class="text-danger"></span>
                </div>               
                <div class="form-group">
                    <label asp-for="IdEvento" class="control-label"></label>
                    <input asp-for="IdEvento" class="form-control" />
                    <span asp-validation-for="IdEvento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaSalida" class="control-label"></label>
                    <input asp-for="FechaSalida" class="form-control" />
                    <span asp-validation-for="FechaSalida" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Registrar Historial" class="btn btn-primary" />
                </div>
            </form>

        </div>

    </div>
</div>

 @*validacion de parte del cliente*@

@section Scripts{
    @{ <partial name="_ValidationScriptsPartial" />}
}



